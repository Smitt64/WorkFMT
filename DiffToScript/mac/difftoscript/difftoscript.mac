import io;

var {Options};
var {SqlStrings};
var {Spelling};
var {Connection};
var {FmtTables};

macro GetDatFileNameForTable(table : string)
    var fi = IoFileInfo({Options}.DatFile);
    var dir = IoDir(fi.path);

    return dir.absoluteFilePath(StrUpr(table) + ".dat");
end;