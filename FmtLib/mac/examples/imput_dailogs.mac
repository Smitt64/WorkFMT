import ToolsRuntime, StdDialogs;

private macro TestStringDialog()
    var result = toolGetText("TestStringDialog", "Сообщение:", "Значение по умолчанию");
    return result;
end;

private macro TestMulyLineDialog()
    var result = toolGetMulyLineText("TestMulyLineDialog", "Сообщение:", "Значение по умолчанию");
    return result;
end;

private macro TestNumberDialog(double)
    var result;

    if (double)
        result = toolGetDouble("TestNumberDialog double", "Сообщение:", 10, 0, 100);
    else
        result = toolGetNumber("TestNumberDialog", "Сообщение:", 10, 0, 100);
    end;

    return result;
end;

